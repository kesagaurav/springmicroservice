package com.gaurav.dto;

import com.gaurav.model.Company;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter @Setter
@AllArgsConstructor
@NoArgsConstructor
public class CompanyDTO {

	public int cid;
	public String companyName;
	
	 //converts entity into dto
		public static CompanyDTO valueOf(Company e) {
		
			CompanyDTO cdto = new CompanyDTO();
			cdto.setCid(e.getCid());
			cdto.setCompanyName(e.getName());
			return edto;
		}
	
		public Company createCompany() {
			Company e = new Company();
			//e.setEid(this.eid);
			e.setName(this.getName());
			e.setGender(this.getGender());
			e.setLocation(this.getLocation());
			e.setAge(this.getAge());
			//e.setCid(this.getCdto().cid);
			return e;
		}
	
}
